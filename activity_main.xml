<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="#f20"
        android:text="Tính khoảng cách ngày"
        android:id="@+id/textviewTieude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Nhập ngày min"
        android:layout_marginTop="80dp"
        android:layout_below="@id/textviewTieude"
        android:id="@+id/edittextNgaymin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Nhập ngày max"
        android:layout_marginTop="40dp"
        android:layout_below="@id/edittextNgaymin"
        android:id="@+id/edittextNgaymax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittextNgaymax"
        android:text="Tinh ngày"
        android:id="@+id/buttonTinhngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#13339b"
        android:textSize="40sp"
        android:layout_below="@id/buttonTinhngay"
        android:id="@+id/textviewKhoangcach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>